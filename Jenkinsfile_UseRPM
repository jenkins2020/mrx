#!/bin/groovy
pipeline {
  agent { dockerfile true }
  stages {
    stage('Copy Archive') {
      steps {
        script {
          step ([$class: 'CopyArtifact',
            projectName: 'mrx_rpm_hello_world',
            filter: "*.rpm",
            target: 'RPMS']);
          }
      }
    }
    stage('List artifacts') {
      steps {
        sh 'ls -lah RPMS/'
      }
    }
  }
}
