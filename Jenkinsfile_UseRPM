#!/bin/groovy
pipeline {
  agent {
    dockerfile {
      additionalBuildArgs "--build-arg user_id=0 --build-arg group_id=0"
    }
  }
  stages {
    stage('Copy Archive') {
      steps {
        script {
          step ([$class: 'CopyArtifact',
            projectName: 'mrx_rpm_hello_world',
            filter: "*.rpm",
            target: 'RPMS']);
          }
      }
    }
    stage('Install artifacts') {
      steps {
        sh 'dnf install -y RPMS/*.rpm'
      }
    }
    stage('execute hello world') {
      steps {
        sh 'rpm -ql RPMS/hello-2.10-1.x86_64.rpm'
      }
    }
  }
}
